                } else if (time < 0.8) {
                    qrsValue = baseValue + Math.random() * 200; // Baseline fluctuations
                } else {
                    lastPeakTime = Date.now(); // Reset for next cycle
                }

                return qrsValue + (Math.random() - 0.5) * noise; // Add slight noise
            };
