<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CareFlex - Login</title>
    <link rel="stylesheet" href="/css/login.css">
  
</head>
<body>
    <nav class="navbar">
        <!-- Replace 'path_to_your_logo.jpg' with your actual logo image path -->
        <a href="#" class="navbar-brand">
            <img src="/Images/logo.png" alt="CareFlex" class="nav-logo">
        </a>
        <div class="nav-links">
            <a href="#">Home</a>
            <a href="#">Monitoring Dashboard</a>
            <a href="#" class="nav-login">Login</a>
        </div>
    </nav>

    <div class="main-container">
        <div class="logo-section">
            <!-- Replace 'path_to_your_main_logo.jpg' with your actual logo image path -->
            <img src="/Images/logo.png" alt="CareFlex Logo" class="main-logo">
            <h1 class="logo-text">CareFlex</h1>
        </div>

        <div class="login-container">
            <h2 class="login-title">Login</h2>
            <form id="loginForm">
                <input type="text" class="input-field" placeholder="UserName" required>
                <input type="password" class="input-field" placeholder="Password" required>
                <button type="submit" class="login-submit">Login</button>
                <a href="/login/doctordata">sign in as doctor</a>
                <a href="/login/patientdata">sign in as patient</a>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const username = document.querySelector('input[type="text"]').value;
            const password = document.querySelector('input[type="password"]').value;
            
            // Add your login logic here
            console.log('Login attempt:', { username, password });
        });

        // Optional: Add smooth scrolling and touch events for mobile
        document.addEventListener('touchstart', function() {}, {passive: true});
    </script>
</body>
</html>